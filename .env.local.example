# AmrCourse — Environment Variables
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# SUPABASE — From Supabase Project Settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# APP URLS
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ADMIN — Authorized admin email
ADMIN_EMAIL=admin@amrcourse.com

# SECURITY
NEXTAUTH_SECRET=generate_a_random_base64_string

# BKASH (Manual)
NEXT_PUBLIC_BKASH_NUMBER=01XXXXXXXXX